generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EventType {
  locationUpdate
}

model Event {
  id          String    @id @default(uuid())
  type        EventType
  description String    @default("")
  location    Location  @relation(fields: [locationId], references: [id])
  locationId  String
}

model Location {
  id           String    @id @default(uuid())
  events       Event[]
  locationName String
  description  String
  cartons      Int?
  piecesPer    Int?
  piecesTotal  Int?
  date         DateTime?
  initials     String
}
